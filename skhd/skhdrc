# focus window
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - l : yabai -m window --focus east

# move window
alt + shift - h : yabai -m window --warp west
alt + shift - j : yabai -m window --warp south
alt + shift - k : yabai -m window --warp north
alt + shift - l : yabai -m window --warp east

# resize windows
alt + shift + cmd - h : yabai -m window --resize left:-48:0; \
                  yabai -m window --resize right:-48:0
alt + shift + cmd - j : yabai -m window --resize bottom:0:48; \
                  yabai -m window --resize top:0:48
alt + shift + cmd - k : yabai -m window --resize top:0:-48; \
                  yabai -m window --resize bottom:0:-48
alt + shift + cmd - l : yabai -m window --resize right:48:0; \
                  yabai -m window --resize left:48:0

# mirror windows
alt + shift - u : yabai -m space --mirror y-axis
alt + shift - i : yabai -m space --mirror x-axis

# toggle float
alt + shift - f : yabai -m window --toggle float --grid 6:6:1:1:4:4

# move to space
alt + shift - 1 : yabai -m space --create 1; yabai -m window --space 1; yabai -m space --focus 1
alt + shift - 2 : yabai -m space --create 2; yabai -m window --space 2; yabai -m space --focus 2
alt + shift - 3 : yabai -m space --create 3; yabai -m window --space 3; yabai -m space --focus 3
alt + shift - 4 : yabai -m space --create 4; yabai -m window --space 4; yabai -m space --focus 4

# toggle zoom
alt + shift + cmd - p : yabai -m window --toggle zoom-parent
alt + shift + cmd - o : yabai -m window --toggle zoom-fullscreen

# toggle split
alt + shift - s : yabai -m window --toggle split

